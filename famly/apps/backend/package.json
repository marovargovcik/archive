    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0"
  },
  "name": "@repo/backend",
  "scripts": {
    "build": "rm -rf dist/* && esbuild src/server.ts --bundle --minify --legal-comments=none --platform=node --outfile=dist/server.js",
